<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:gravity="center"
    android:orientation="horizontal"
    android:padding="8dp">

    <!-- Attachment Button Space -->
    <Space
        android:id="@+id/attachmentButtonSpace"
        android:layout_width="8dp"
        android:layout_height="match_parent" />

    <!-- Attachment Icon -->
    <ImageButton
        android:id="@+id/attachmentButton"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:contentDescription="Attachment"
        android:src="@drawable/attach_document"
        android:scaleType="fitCenter"
        android:background="@android:color/transparent"
        app:tint="@color/colorPrimary" />

    <!-- Message Input -->
    <EditText
        android:id="@+id/messageInput"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_weight="1"
        android:background="@drawable/bordered_input_light"
        android:hint="Type a message"
        android:paddingHorizontal="12dp"
        android:layout_marginHorizontal="8dp"
        android:textSize="16sp" />

    <!-- Send Button -->
    <ImageButton
        android:id="@+id/messageSendButton"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:contentDescription="Send"
        android:src="@drawable/send"
        android:scaleType="fitCenter"
        android:background="@android:color/transparent"
        app:tint="@color/colorPrimary" />

    <!-- Send Button Space -->
    <Space
        android:id="@+id/sendButtonSpace"
        android:layout_width="8dp"
        android:layout_height="match_parent" />

</LinearLayout>
