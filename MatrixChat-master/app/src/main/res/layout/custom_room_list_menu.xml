<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/custom_room_menu"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingHorizontal="4dp">

    <LinearLayout
        android:id="@+id/roomMenuHolder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/dialog_background_secondary"
        android:orientation="vertical"
        android:padding="10dp"
        android:paddingVertical="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="12dp"
            android:layout_weight="1"
            android:fontFamily="@font/quicksand_semibold"
            android:text="Are you sure you want to delete?"
            android:textColor="@color/navy_blue"
            android:textSize="16sp" />

        <LinearLayout
            android:id="@+id/contHoriz"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/deleteRoom"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_weight="1"
                android:background="@drawable/filled_button_danger"
                android:fontFamily="@font/quicksand_bold"
                android:gravity="center"
                android:lineSpacingExtra="12sp"
                android:text="Delete Room"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:textStyle="bold"
                app:lineHeight="40sp" />

            <TextView

                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_marginHorizontal="2dp"
                android:layout_weight="2" />

            <TextView
                android:id="@+id/cancel"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_weight="1"
                android:background="@drawable/filled_button"
                android:fontFamily="@font/quicksand_bold"
                android:gravity="center"
                android:lineSpacingExtra="12sp"
                android:text="Cancel"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:textStyle="bold"
                app:lineHeight="40sp" />
        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>